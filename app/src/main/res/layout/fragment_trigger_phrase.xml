<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgtrigger"
    tools:context="com.simcoder.test.TriggerPhraseFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txvResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:textAlignment="center"
            android:textColor="#c1bebe"
            android:textSize="24sp"
            android:textStyle="normal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp"
            android:layout_marginTop="30dp"
            android:text="Please say 3 or 4 words as a trigger phrase"
            android:textAlignment="center"
            android:textColor="@color/place_autocomplete_prediction_secondary_text"
            android:textSize="24sp"
            android:textStyle="normal" />


        <ImageView
            android:id="@+id/btnSpeak"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_mic" />

        <TextView
            android:id="@+id/txvTemp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="30dp"
            android:textColor="#c1bebe"
            android:textSize="24sp"
            android:textStyle="normal" />
        <Button
            android:id="@+id/btn_save"
            android:layout_marginTop="10dp"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="123dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/border"
            android:text="Confirm"
            android:textColor="#c1bebe"
            android:textSize="18sp" />


    </LinearLayout>


</FrameLayout>
