<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/faria"
    android:orientation="vertical"
    android:padding="20sp"
    tools:context="com.simcoder.test.ProfileFragment">



    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20sp"
        android:layout_marginTop="25dp"
        android:src="@drawable/icon_manush" />

    <LinearLayout
        android:layout_width="339dp"
        android:layout_height="38dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="start"
            android:paddingTop="08dp"
            android:text="Name"
            android:textAlignment="textStart"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textSize="17sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@android:drawable/btn_star" />

        <EditText
            android:id="@+id/name"
            android:layout_width="260dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15sp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="Name"
            android:textColor="@color/cardview_light_background"
            android:textColorHighlight="@color/cast_intro_overlay_button_background_color"
            android:textColorHint="@color/cast_expanded_controller_seek_bar_progress_background_tint_color"
            android:visibility="visible" />

        <ImageButton
            android:id="@+id/edit1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12sp"
            android:layout_weight="1"
            android:src="@android:drawable/ic_menu_edit" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="339dp"
        android:layout_height="38dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="08dp"
            android:text="Gender"
            android:textColor="@color/cast_expanded_controller_progress_text_color"
            android:textSize="17sp" />

        <Spinner
            android:id="@+id/gender"
            android:layout_width="260dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15sp"
            android:layout_weight="1"
            android:background="@null"
            android:textColor="@color/cardview_light_background"
            android:textSize="17sp" />

        <ImageButton
            android:id="@+id/edit2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12sp"
            android:layout_weight="1"
            android:src="@android:drawable/ic_menu_edit" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="339dp"
        android:layout_height="38dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="start"
            android:paddingTop="08dp"
            android:text="Date of Birth"
            android:textAlignment="textStart"
            android:textColor="@color/cast_expanded_controller_text_color"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/DateofBirth"
            android:layout_width="238dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:hint="Date"
            android:paddingLeft="08dp"
            android:paddingTop="08dp"
            android:textColor="@color/cast_expanded_controller_text_color"
            android:textColorHint="@color/cast_expanded_controller_seek_bar_progress_background_tint_color"
            android:textSize="17sp" />

        <ImageButton
            android:id="@+id/edit3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="12sp"
            android:layout_weight="1"
            android:src="@android:drawable/ic_menu_edit" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="339dp"
        android:layout_height="38dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="92dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="start"
            android:paddingTop="08dp"
            android:text="Country"
            android:textAlignment="textStart"
            android:textColor="@color/cast_expanded_controller_text_color"
            android:textSize="17sp" />

        <Spinner
            android:id="@+id/country"
            android:layout_width="260dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15sp"
            android:layout_weight="1"
            android:background="@null"
            android:textColor="@color/cardview_light_background"
            android:textSize="17sp" />

        <ImageButton
            android:id="@+id/edit4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="12sp"
            android:layout_weight="1"
            android:src="@android:drawable/ic_menu_edit" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="339dp"
        android:layout_height="38dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="start"
            android:paddingTop="08dp"
            android:text="Age"
            android:textAlignment="textStart"
            android:textColor="@color/cast_expanded_controller_text_color"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/age"
            android:layout_width="260dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15sp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="age"
            android:textColor="@color/cast_expanded_controller_text_color"
            android:textColorHint="@color/cast_expanded_controller_seek_bar_progress_background_tint_color" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="339dp"
        android:layout_height="38dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="start"
            android:paddingTop="08dp"
            android:text="Phone"
            android:textAlignment="textStart"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/phone"
            android:layout_marginLeft="15sp"
            android:layout_width="260dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="numberSigned"
            android:background="@null"
            android:hint="Contact Number"
            android:textColor="@color/cardview_light_background"
            android:textColorHint="@color/cast_expanded_controller_seek_bar_progress_background_tint_color"
            />

        <ImageButton
            android:id="@+id/edit5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12sp"
            android:layout_weight="1"
            android:src="@android:drawable/ic_menu_edit" />
    </LinearLayout>

    <Button
        android:id="@+id/confirm"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="08sp"
        android:background="@color/common_google_signin_btn_text_light_default"
        android:text="confirm"
        android:textColor="@color/cardview_light_background" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number" />


</LinearLayout>
